<view>
    <layout-goods :goodsData="firstData" _pid="{{_pid}}"></layout-goods>

    <!-- wxp template -->
    <view>商品详情</view>
    <image src="{{pageData.imgs[0]}}" class="detail-picture"></image>
    <view>
        <view>{{pageData.name}}</view>
        <wxc-price value="{{pageData.price}}" decimal="small" _pid="{{_pid}}"></wxc-price>
    </view>
    <view>{{pageData.introduction}}</view>
    <wxc-dialog class="wxc-dialog" title="获取数据失败" content="网络出错了,点击确定重试" confirm-text="确定" cancel-text="取消" bindconfirm="onConfirm" bindcancel="onCancel" _pid="{{_pid}}"></wxc-dialog>
</view>