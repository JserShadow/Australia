<view class="head">
    <wxc-tab bind:tabchange="onClick" default-index="{{0}}" active-text-color="#f7a02e" active-line-color="#f7a02e" component-id="c1" animate="{{true}}" _pid="{{_pid}}">
        <wxc-tab-panel wx:for="{{tabs}}" wx:for-item="tab" wx:key="{{tab.content}}" tab-index="{{index}}" component-id="c1" label="{{tab.title}}" _pid="{{_pid}}">
            <view class="item-container">
                <wxc-avatar class="item-img-container" mold="square" src="" _pid="{{_pid}}"></wxc-avatar>
                <view class="item-info-container">
                    <view class="name"></view>
                    <wxc-price class="price" value="" decimal="small" _pid="{{_pid}}">price</wxc-price>
                    <wxc-elip class="infomation" line="2" _pid="{{_pid}}"></wxc-elip>
                </view>
            </view>
        </wxc-tab-panel>
    </wxc-tab>
</view>